@page "/songs"
@rendermode InteractiveServer
@using OurRadio.Models
@using OurRadio.Data
@using System.Threading.Tasks
@inject ILogger<Songs> Logger
@inject IWebHostEnvironment Environment
@inject SongService SongService
@inject IJSRuntime JSRuntime

<PageTitle>Songs</PageTitle>

<h1>Songs</h1>

<button class="btn btn-primary mb-3" @onclick="ShowAddForm">Add New Song</button>

@if (isAddModalOpen)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Song</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddForm" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <InputText class="form-control" @bind-Value="newSong.Title" />
                    </div>
                    @* TODO: need to figure out duration of song server side instead                 *@
                    <div class="mb-3">
                        <label class="form-label">Duration (seconds)</label>
                        <InputNumber class="form-control" @bind-Value="newSong.DurationSeconds" />
                    </div>
                    <div class="mb-3">>
                        <label class="form-label">Audio File</label>
                        <InputFile OnChange="LoadFiles" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseAddForm">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveNewSong" disabled="@isSaving">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@if (songs == null)
{
    <p><em>Loading...</em></p>
}
else if (songs.Count == 0)
{
    <p><em>No songs found.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Duration</th>
                <th>Filename</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in songs)
            {
                <tr>
                    <td>@song.Title</td>
                    <td>@song.DurationSeconds seconds</td>
                    <td>@song.Filename</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteSong(song.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Song>? songs;
    @* Modal stuff *@
    private bool isAddModalOpen;
    private bool isSaving;
    private Song newSong = new();
    @* Upload stuff *@
    private List<IBrowserFile> loadedFiles = [];
    private string uploadedFilename = string.Empty;
    private bool isLoading;
    private int maxFileSize = 1024 * 1024 * 50;

    protected override async Task OnInitializedAsync()
    {
        await LoadSongs();
    }

    private async Task LoadSongs()
    {
        songs = await SongService.GetAllSongsAsync();
    }

    private void ShowAddForm()
    {
        newSong = new Song();
        uploadedFilename = string.Empty;
        isAddModalOpen = true;
    }

    private void CloseAddForm()
    {
        isAddModalOpen = false;
        @* Delete unused song files *@
        if (!string.IsNullOrEmpty(uploadedFilename))
        {
            var path = Path.Combine(Environment.ContentRootPath,
                Environment.EnvironmentName, "unsafe_uploads",
                uploadedFilename);
            if (File.Exists(path))
            {
                File.Delete(path);
                Logger.LogInformation("Deleted unused uploaded file: {Filename}", uploadedFilename);
            }
        }
    }

    private async Task LoadFiles(InputFileChangeEventArgs e)
    {
        isLoading = true;
        loadedFiles.Clear();

        var file = e.File;
        try
        {
            var trustedFileName = Path.GetRandomFileName() + Path.GetExtension(file.Name);
            var path = Path.Combine(Environment.ContentRootPath,
                Environment.EnvironmentName, "unsafe_uploads",
                trustedFileName);

            await using FileStream fs = new(path, FileMode.Create);
            await file.OpenReadStream(maxFileSize).CopyToAsync(fs);

            loadedFiles.Add(file);
            uploadedFilename = trustedFileName;
            newSong.Filename = trustedFileName;

            Logger.LogInformation(
                "Unsafe Filename: {UnsafeFilename} File saved: {Filename}",
                file.Name, trustedFileName);
        }
        catch (Exception ex)
        {
            Logger.LogError("File: {Filename} Error: {Error}",
                file.Name, ex.Message);
        }

        isLoading = false;
    }

    private async Task SaveNewSong()
    {
        if (string.IsNullOrWhiteSpace(newSong.Title))
        {
            return;
        }

        isSaving = true;
        await SongService.AddSongAsync(newSong);
        isSaving = false;
        isAddModalOpen = false;
        await LoadSongs();
    }

    private async Task DeleteSong(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this song?"))
        {
            await SongService.DeleteSongAsync(id);
            await LoadSongs();
        }
    }
}
